@{
}


<h1>Delete Events</h1>

<form method="post">
    @foreach(Event evt in ViewBag.events)
    {
        <div class="form-group">
            <label>
                <span>@evt.Name</span>
                <input type="checkbox" name="eventIds" value="@evt.Id"/>
            </label>
        </div>
    }

    <input type="submit" value="Delete Selected Events" class="btn btn-danger"/>
</form>