@model List<TechJobsPersistent.Models.Skill>

<h1>In-demand Skills</h1>

<p><a asp-controller="Skill" asp-action="Add">Add a Skill</a></p>

@if (Model.Count == 0)
{
    <p>No skills are currently listed!</p>
}
else
{
    <div>
        <ul>
            @foreach (Skill skill in Model)
            {
                <li>
                    <a asp-controller="Skill" asp-action="About" asp-route-id="@skill.Id">@skill.Name</a>
                </li>
            }
        </ul>
    </div>
}
